<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/help_check_market_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/sina"
        android:scaleType="centerInside"
        android:layout_marginRight="@dimen/five_dip"
        />
    <TextView
        android:id="@+id/help_check_market_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="@dimen/five_dip"
        android:text="大润发超市"
        android:textColor="@color/text_half_black_color"
        android:background="@drawable/cicle_back_market"
        />
</LinearLayout>