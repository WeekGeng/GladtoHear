<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yieryi.gladtohear.activities.LoginActivity">
    <include layout="@layout/toolbar"></include>
     <ImageView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@mipmap/ic_launcher"
         android:layout_weight="0.5"
         />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:id="@+id/login_ed_phone"
        android:layout_margin="10dp"
        android:textColor="@color/text_half_black_color"
        android:background="@drawable/cicle_back_login"
        android:padding="10dp"
        android:textColorHint="@color/text_little_black_color"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:padding="10dp"
        android:textColor="@color/text_half_black_color"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:background="@drawable/cicle_back_login"
        android:layout_marginTop="10dp"
        android:id="@+id/login_ed_pass"
        android:textColorHint="@color/text_little_black_color"
        />
    <TextView
        android:id="@+id/login_tv_login"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="登录"
        android:background="@drawable/cicle_back_login_tv"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/login_tv_forget_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="@dimen/sixteen_dip"
            android:textColor="@color/text_black_color"
            android:text="忘记密码 ?"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/text_half_black_color"
            />
        <TextView
            android:id="@+id/login_tv_regist"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sixteen_dip"
            android:textColor="@color/text_black_color"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="注册账户"
            />
    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/login_tv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textColor="@color/text_black_color"
            android:drawableTop="@mipmap/qq"
            android:gravity="center"
            android:drawablePadding="5dp"
            />
        <TextView
            android:id="@+id/login_tv_weixin"
            android:layout_toRightOf="@+id/login_tv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/text_black_color"
            android:drawableTop="@mipmap/weixin"
            android:gravity="center"
            android:drawablePadding="5dp"
            />
        <TextView
            android:id="@+id/login_tv_sina"
            android:layout_toRightOf="@+id/login_tv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新浪"
            android:textColor="@color/text_black_color"
            android:drawableTop="@mipmap/sina"
            android:gravity="center"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>
</LinearLayout>
