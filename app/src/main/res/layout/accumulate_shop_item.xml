<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/five_dip"
    android:background="@mipmap/shoppingbg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/accumulate_item_shopping_iv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_marginTop="15dip"
            android:src="@mipmap/tupiankuang" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/duijiang" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:id="@+id/accumulate_item_shopping_introduce_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/five_dip"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/accumulate_item_shopping_introduce_tv"
            android:textColor="#000000"
            android:text="兑换："
            android:padding="@dimen/five_dip"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/accumulate_item_shopping_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_score"
            android:padding="@dimen/five_dip"
            android:layout_below="@+id/accumulate_item_shopping_introduce_tv"
            android:gravity="center"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>