            android:id="@+id/brand_sel_tv9"
            android:gravity="center"
            android:layout_margin="@dimen/five_dip"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/five_dip"
            android:background="@drawable/cicle_back_goods_list"
            android:layout_height="wrap_content"
            android:text="more>>"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/two_dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/brand_sel_recycle"
       />
</LinearLayout>