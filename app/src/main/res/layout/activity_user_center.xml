<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/ditu_right"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/topLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:background="@mipmap/shangbiankuang"
            android:orientation="horizontal" />
        <RelativeLayout
            android:id="@+id/iv_top"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-50dip" >

            <ImageView
                android:id="@+id/headImageView"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:src="@mipmap/iv_hearder_default" />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@mipmap/youbianliebiao" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dip"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/user_center_login_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登陆"
                android:textSize="@dimen/sixteen_sp"
                android:layout_marginRight="@dimen/five_dip"
                android:textColor="@color/color_white"
                />
            <TextView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/color_white"
                android:layout_marginLeft="@dimen/five_dip"
                android:layout_marginRight="@dimen/five_dip"
                android:layout_marginTop="@dimen/two_dip"
                android:layout_marginBottom="@dimen/two_dip"
                />
            <TextView
                android:id="@+id/user_center_regist_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textSize="@dimen/sixteen_sp"
                android:textColor="@color/color_white"
                android:layout_marginLeft="@dimen/five_dip"
                />

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/function"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/five_dip"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.4.0"
        android:textColor="@color/color_white"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/five_dip"
        />
