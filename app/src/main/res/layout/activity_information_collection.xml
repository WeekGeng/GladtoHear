<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.yieryi.gladtohear.activities.InformationCollectionActivity">
    <include layout="@layout/toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/food_drink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_white"
            android:padding="@dimen/ten_dip"
            android:background="@color/text_little_half_red"
            android:text="@string/food_drink"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"></View>
        <TextView
            android:id="@+id/mom_baby"
            android:layout_width="wrap_content"
            android:textColor="@color/color_white"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten_dip"
            android:background="@color/text_little_half_red"
            android:layout_weight="1"
            android:text="@string/mom_baby"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"></View>
        <TextView
            android:id="@+id/day_user_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:padding="@dimen/ten_dip"
            android:background="@color/text_little_half_red"
            android:layout_weight="1"
            android:text="@string/day_user_family"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"></View>
        <TextView
            android:id="@+id/cosmetic_skin"
            android:layout_width="wrap_content"
            android:textColor="@color/color_white"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/text_little_half_red"
            android:padding="@dimen/ten_dip"
            android:text="@string/cosmetic_skin"
            />
    </LinearLayout>
    <com.yieryi.gladtohear.view.SwipeRefreshView
        android:id="@+id/swipeRefreshView"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/information_col_recyc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></android.support.v7.widget.RecyclerView>
    </com.yieryi.gladtohear.view.SwipeRefreshView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/transparent_gray"/>
</LinearLayout>
